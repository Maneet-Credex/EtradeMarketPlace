@model RfpViewModel

@{

    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <title>RFP</title>
    <style>

        body {
            height: 100vh;
            box-sizing: border-box;
        }

        ::after, ::before {
            box-sizing: border-box;
        }

        .div-cont {
            width: 700px;
            margin: 0 auto;
            height: 95%;
            display: flex;
            flex-direction: column;
            padding-top: 2%;
        }

        .row {
            display: flex;
            flex-direction: row;
            height: 300px;
            overflow-y: scroll;
            margin-bottom: 10px;
            border-radius: 3%;
        }

        .col {
            flex: 1;
            padding: 10px;
            font-size: 18px;
        }

        .row1 {
            background-color: #f3f6fd;
            flex: 5;
        }

        .row2 {
            background-color: #f3f6fd;
            flex: 5;
        }

        .grid {
            display: grid;
            gap: 1.5rem;
            grid-template-columns: auto auto;
        }


        .detail-row {
            display: flex;
        }
    </style>
</head>
<body>
    <div class="div-cont">
        <div class="row row1">
            <div class="col">
                <div class="col"><h2>RFP Detail</h2><hr></div>
                <div class="col grid">
                    <div class="detail-row">
                        <div>
                            <span class="material-symbols-outlined">
                                description
                            </span>
                        </div>
                        <div>RFP Name: @Model.RfpName </div>
                    </div>
                    <div class="detail-row">
                        <div>
                            <span class="material-symbols-outlined">
                                shopping_cart
                            </span>
                        </div>
                        <div>Quantity: @Model.Quantity </div>
                    </div>
                    <div class="detail-row">
                        <div>
                            <span class="material-symbols-outlined">
                                category
                            </span>
                        </div>
                        <div>Product Category: </div>
                    </div>
                    <div class="detail-row">
                        <div>
                            <span class="material-symbols-outlined">
                                currency_rupee
                            </span>
                        </div>
                        <div> Budget: @Model.MaxPrice</div>
                    </div>
                    <div class="detail-row">
                        <div>
                            <span class="material-symbols-outlined">
                                calendar_month
                            </span>
                        </div>
                        <div> Last date to apply: @Model.LastDate</div>
                    </div>
                    <div class="detail-row">
                        <span class="material-symbols-outlined">
                            inventory
                        </span>
                        <div> Total bids</div>
                    </div>
                    <div class="detail-row">
                        <div>
                            <span class="material-symbols-outlined">
                                calendar_month
                            </span>
                        </div>
                        <div> Created on: @Model.CreationDate</div>
                    </div>
                    <div class="detail-row">
                        <div>
                            <span class="material-symbols-outlined">
                                apartment
                            </span>
                        </div>
                        <div> Organisation Name</div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row row2">

            <div class="col">
                <h2>RFP Description</h2>
                @Html.Raw(Model.RfpDescription)
        </div>

        </div>


    </div>
</body>
</html>
